unamestr=`uname`
if [[ $unamestr = "Darwin" ]]; then
  alias ll='ls -alG'
  alias gvim=mvim
  alias mongod-run='mongod run --config /usr/local/etc/mongod.conf'
else
  alias ll='ls -alF'
fi

alias be='bundle exec'

alias git=hub
alias gs='git status'
alias gl='git lg'
alias pull='git pull'
alias push='git push'
